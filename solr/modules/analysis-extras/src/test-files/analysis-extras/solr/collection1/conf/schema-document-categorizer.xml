<schema name="document-categorizer" version="1.6">
  <fieldType name="string" class="solr.StrField" sortMissingLast="true" docValues="true"/>
  <fieldType name="strings" class="solr.StrField" sortMissingLast="true" multiValued="true" docValues="true"/>
  <fieldType name="text" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
    </analyzer>
  </fieldType>
  
  <!-- For document categorization -->
  <fieldType name="categorizer_text" class="solr.TextField" positionIncrementGap="100">
    <analyzer>
      <tokenizer class="solr.StandardTokenizerFactory"/>
      <filter class="solr.LowerCaseFilterFactory"/>
      <!--filter class="solr.StopFilterFactory" words="stopwords.txt" ignoreCase="true"/-->
    </analyzer>
  </fieldType>
  
  <!-- Fields used in tests -->
  <field name="id" type="string" indexed="true" stored="true" required="true"/>
  <field name="text_s" type="string" indexed="true" stored="true"/>
  <field name="text1_s" type="string" indexed="true" stored="true"/>
  <field name="text2_s" type="string" indexed="true" stored="true"/>
  <field name="text0_s" type="string" indexed="true" stored="true"/>
  <field name="ignore_s" type="string" indexed="true" stored="true"/>
  <field name="review_text_s" type="string" indexed="true" stored="true"/>
  <field name="comments_s" type="string" indexed="true" stored="true"/>
  <field name="review_1_text" type="string" indexed="true" stored="true"/>
  <field name="review_2_text" type="string" indexed="true" stored="true"/>
  
  <!-- Destination fields -->
  <field name="category_s" type="strings" indexed="true" stored="true" multiValued="true"/>
  <field name="result_1_category" type="string" indexed="true" stored="true"/>
  <field name="result_2_category" type="string" indexed="true" stored="true"/>
  
  <uniqueKey>id</uniqueKey>
</schema>
